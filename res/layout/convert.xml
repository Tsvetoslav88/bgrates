 <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:gravity="center_horizontal"
>
<Button android:paddingLeft="10px" android:paddingRight="10px" android:text="Convert" android:id="@+id/ButtonConvert" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="24px"></Button>
</LinearLayout>


</LinearLayout>
